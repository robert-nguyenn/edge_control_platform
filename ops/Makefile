# Edge Control Platform - Ops Scripts

.PHONY: up down seed logs clean

up:
	@echo "ğŸš€ Starting Edge Control Platform..."
	docker-compose up -d
	@echo "â³ Waiting for services to be ready..."
	@sleep 10
	@echo "ğŸŒ± Running seed script..."
	@bash seed.sh
	@echo "âœ… Platform is ready!"
	@echo "ğŸŒ Admin UI: http://localhost:3000"
	@echo "ğŸ”— API: http://localhost:5000"

down:
	@echo "ğŸ›‘ Stopping Edge Control Platform..."
