seed:
	@echo "ğŸŒ± Seeding database..."
	@bash seed.sh

logs:
	@echo "ğŸ“‹ Showing logs..."
	docker-compose logs -f

clean:
	@echo "ğŸ§¹ Cleaning up..."
	docker-compose down -v --remove-orphans
	docker system prune -f

status:
	@echo "ğŸ“Š Service status:"
	@docker-compose ps

restart:
	@echo "ğŸ”„ Restarting services..."
	docker-compose restart
